@model Category


<form asp-action="Create" asp-controller="Category" method="post" class="mt-3 w-75 mx-auto p-3 shadow ">
    <div class="form-group row align-content-center">
        <div class="col-md-2">
            <label asp-for="CategoryName"></label><br />
            <span asp-validation-for="CategoryName" class="text-danger"></span><br />
            <label asp-for="Description"></label>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="col-md-9">
            <input asp-for="CategoryName" /> <br /><br />
            <input asp-for="Description" /> <br />
        </div>
    </div>
    <div class="form-group">
        <input type="submit" name="Add" class="btn btn-warning" />
    </div>
    
</form>

